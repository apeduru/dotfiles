# vim: set ft=gitconfig:

[includeIf "gitdir:~/dotfiles/"]
  path = ~/.gitconfig-personal

[includeIf "gitdir:~/github/"]
  path = ~/.gitconfig-personal

[includeIf "gitdir:~/wotfiles/"]
  path = ~/.gitconfig-work

[includeIf "gitdir:~/src/"]
  path = ~/.gitconfig-work

[includeIf "gitdir:~/go/"]
  path = ~/.gitconfig-work

[includeIf "gitdir:~/journal/"]
  path = ~/.gitconfig-work

[branch]
    autoSetupRebase = always

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = red

[push]
    default = simple

[pull]
	rebase = true
[merge]
	ff = false

[alias]
    empty = commit -m 'Empty commit' --allow-empty
