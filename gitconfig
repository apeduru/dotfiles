[includeIf "gitdir:~/dotfiles/"]
  path = ~/.gitconfig-personal

[includeIf "gitdir:~/src/"]
  path = ~/.gitconfig-work

[includeIf "gitdir:~/go/"]
  path = ~/.gitconfig-work

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yello
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = red

[push]
    default = simple
