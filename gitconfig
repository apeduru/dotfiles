# vim: set ft=gitconfig:

[branch]
    autoSetupRebase = always
    autoSetupMerge = always # controls whether git branch and git checkout -b imply the --track option

[core]
    pager = delta
    diff = delta
    log = delta
    reflog = delta
    show = delta
    editor = nvim

[commit]
    verbose = true

[delta]
    features = line-numbers decorations
    plus-style = syntax 22
    plus-emph-style = syntax bold 28
    navigate = true
    line-numbers-plus-style = 22
    line-numbers-left-style = 39
    line-numbers-right-style = 39

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
    hunk-header-decoration-style = yellow box

[interactive]
    diffFilter = delta --color-only

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = red

[push]
    default = current

[pull]
	rebase = true

[merge]
	ff = false

[alias]
    empty = commit -m 'Empty commit' --allow-empty
    uncommit = reset --soft HEAD~1
    unstage = restore --staged *
    co = checkout

[includeIf "gitdir:~/dotfiles/"]
  path = ~/.gitconfig-personal

[includeIf "gitdir:~/wotfiles/"]
  path = ~/.gitconfig-work

[includeIf "gitdir:~/go/"]
  path = ~/.gitconfig-work

[includeIf "gitdir:~/go/src/github.com/apeduru/"]
  path = ~/.gitconfig-personal

[includeIf "gitdir:~/journal/"]
  path = ~/.gitconfig-work

[includeIf "gitdir:~/src/"]
  path = ~/.gitconfig-work

[includeIf "gitdir:~/src/github.com/"]
  path = ~/.gitconfig-personal
