#!/bin/bash

set -e

DOTFILES=~/dotfiles
WOTFILES=~/wotfiles
echo "Installing $DOTFILES and $WOTFILES (if applicable)"

# TODO: prompt for installing packages
# pip install -r $DOTFILES/requirements.txt
# curl https://sh.rustup.rs -sSf | bash -s -- -y
# cat $DOTFILES/cargo.list | xargs cargo install

if [ ! -d $DOTFILES ]; then
    echo "Cloning dotfiles repo"
    git clone git@github.com:apeduru/dotfiles.git $DOTFILES
fi

cd $DOTFILES
if [ "$(uname)" == "Darwin"  ]; then
  if  [ ! -e $(which brew) ]; then
    /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
  fi
  brew update
  brew bundle

  rcup -d $DOTFILES -d $WOTFILES -v
else
  sudo apt update
  cat $DOTFILES/packages.list | xargs sudo apt-get --yes install

  rcup -d $DOTFILES -f $WOTFILES -t linux -v
fi

exit 0
